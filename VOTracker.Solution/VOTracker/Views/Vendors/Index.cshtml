<!DOCTYPE html>
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Vendors List</title>
  <link href="~/css/styles.css" rel="stylesheet" type="text/css">
</head>
<body>
@using VOTracker.Models;

  <h2>Hello, welcome to the Vendors main page.</h2>

  <h3>List of Vendors:</h3>
  
@if (Model.Count == 0)
{
  <h3>No Vendors registered at the moment. Please register a vendor now.</h3>

  <div class="spacer" style="height: 20px"></div>

  <a href="/vendors/new"><button class="newV">Add new vendor</button></a>
  <a href="/"><button class="home">Home</button></a>
}
else
{ 
    <div class="vendorsDisplay" style="
        height: 40vh;
        width: 60vw;
        overflow: auto;
    ">
    <ul>
        @foreach(Vendor business in Model)
        {
          <div class="vendorDiv" id="vendorDivSummary" style="margin-bottom: 5px; list-style: none;">
              <li><a href="/vendors/show/@business.Id">@business.Name</a> - Id: @business.Id 

              @{ List<Order> specificOrders = Order.GetOrders();
              <li style="margin-left: 2rem;">Current Number of Orders: @specificOrders.Count</li>
              }
              </li>
          </div>              
        }
    </ul>
    </div>

  <div class="spacer" style="height: 20px"></div>

  <a href="/vendors/new"><button class="newV">Add new vendor</button></a>
  <a href="/orders"><button>Go To Orders Page</button></a>
  <a href="/"><button class="home">Home</button></a>
}
</body>
</html>