using Microsoft.AspNetCore.Mvc;
using System.Collections.Generic;
using VOTracker.Models;

namespace VOTracker.Controllers
{
  public class OrdersController : Controller
  {

    [HttpGet("/Orders")]
    public ActionResult Index()
    {
      List<Order> allOrders = Order.GetAll();
      return View(allOrders);
    }

    [HttpGet("/Orders/create")]
    public ActionResult New()
    {
      return View();
    }

    [HttpPost("/Orders")]
    public ActionResult Create(string orderName, string orderDescription, int price, int date)
    {
      Order myOrder = new Order(orderName, orderDescription, price, date);
      return RedirectToAction("Index");
    }

